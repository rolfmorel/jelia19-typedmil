unary_bg(my_odd4,u(int),X):- 1 = X \ 2,state(X,int),X<10.
binary_bg(my_msort5,(list(int),list(int)),X,Y) :- &pySort[X](Y),state(X,list(int)).
unary_bg(my_even6,u(int),X):- 0 = X \ 2,state(X,int),X<10.
binary_bg(my_sumlist7,(list(int),int),X,Y) :- &pySumlist[X](Y),state(X,list(int)).
binary_bg(my_double8,(int,int),X,Y) :- Y=2*X,Y < 10,Y >= 0,state(X,int).
binary_bg(my_head9,(list(T),T),(HD,TL),HD) :- state((HD,TL),list(T)).
binary_bg(my_flatten10,(list(list(T)),list(T)),X,Y) :- &pyFlatten[X](Y),state(X,list(list(T))),ty(T).
binary_bg(my_len11,(list(T),int),X,Y) :- &pyLength[X](Y),state(X,list(T)).
unary_bg(my_lowercase12,u(char),X):-&pyLowercase[X](),state(X,char).
binary_bg(my_tail13,(list(T),list(T)),(HD,TL),TL) :- state((HD,TL),list(T)).
binary_bg(my_min_list14,(list(int),int),X,Y) :- &pyMinlist[X](Y),state(X,list(int)).
