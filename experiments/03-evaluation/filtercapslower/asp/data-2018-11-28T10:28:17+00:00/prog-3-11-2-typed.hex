
type(int,0).
type(char,0).
type(list(T),I):- J + 1 = I, I < 3,type(T,J).
ty(T) :- type(T,_).

pred(P,T) :- unary_bg(P,T,_).
pred(P,T) :- binary_bg(P,T,_,_).
pred(P,T) :- ho_bg(P,T,_,_,_).
pred(P,T) :- skolem(P),meta(_,T,P,_,_).
pred(P,T) :- pos_ex_t(P,T,_,_).
