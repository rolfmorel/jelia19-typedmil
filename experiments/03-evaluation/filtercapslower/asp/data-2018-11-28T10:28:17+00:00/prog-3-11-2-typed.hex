ho_bg(map,(list(S),list(T),(S,T)),(),(),F) :- 
  pred(F,(S,T)),ty(S),ty(T).
ho_bg(map,(list(S),list(T),(S,T)),(H1,TL1),(H2,TL2),F) :-
  state((H1,TL1),list(S)),
  state(TL1,list(S)),
  ty(S),ty(T),
  ho_bg(map,(list(S),list(T),(S,T)),TL1,TL2,F),
  deduced(F,(S,T),H1,H2),
  pred(F,(S,T)).
