ho_bg(map,(),(),F) :- 
  pred(F).
ho_bg(map,(H1,TL1),(H2,TL2),F) :-
  state((H1,TL1)),
  state(TL1),
  ho_bg(map,TL1,TL2,F),
  deduced(F,H1,H2),
  pred(F). % FIXME: ty(T)?
