unary_bg(my_uppercase0,X):-&pyUppercase[X](),state(X).
binary_bg(my_tolower1,X,Y) :- &pyToLower[X](Y),state(X).

ho_bg(filter,(),(),P) :- 
  pred(P).
ho_bg(filter,(H1,TL1),(H1,TL2),P) :-
  state((H1,TL1)),
  deduced(P,H1),
  ho_bg(filter,TL1,TL2,P),
  pred(P).
ho_bg(filter,(H1,TL1),TL2,P) :-
  state((H1,TL1)),
  not deduced(P,H1),
  ho_bg(filter,TL1,TL2,P),
  pred(P).
