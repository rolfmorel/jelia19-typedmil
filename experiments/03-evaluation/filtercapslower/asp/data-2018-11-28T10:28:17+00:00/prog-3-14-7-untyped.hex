binary_bg(my_succ4,X,Y) :- &pySucc[X](Y),state(X),X < 10.
binary_bg(my_pred5,X,Y) :- &pyPred[X](Y),state(X),X > 0.
binary_bg(my_element6,X,Y) :- &pyElement[X](Y),state(X).
binary_bg(my_sumlist7,X,Y) :- &pySumlist[X](Y),state(X).
binary_bg(my_flatten8,X,Y) :- &pyFlatten[X](Y),state(X).
unary_bg(my_lowercase9,X):-&pyLowercase[X](),state(X).
binary_bg(my_tail10,(HD,TL),TL) :- state((HD,TL)).
binary_bg(my_max_list11,X,Y) :- &pyMaxlist[X](Y),state(X).
binary_bg(my_msort12,X,Y) :- &pySort[X](Y),state(X).
unary_bg(my_set13,X):-&pySet[X](),state(X),X<10.
binary_bg(my_head14,(HD,TL),HD) :- state((HD,TL)).
binary_bg(my_len15,X,Y) :- &pyLength[X](Y),state(X).
unary_bg(my_odd16,X):- 1 = X \ 2,state(X),X<10.
binary_bg(my_double17,X,Y) :- Y=2*X,Y < 10,Y >= 0,state(X).
