binary_bg(my_len3,(list(T),int),X,Y) :- &pyLength[X](Y),state(X,list(T)).
unary_bg(my_even4,u(int),X):- 0 = X \ 2,state(X,int),X<10.
binary_bg(my_element5,(list(T),T),X,Y) :- &pyElement[X](Y),state(X,list(T)),ty(T).
unary_bg(my_odd6,u(int),X):- 1 = X \ 2,state(X,int),X<10.
binary_bg(my_list_to_set7,(list(T),list(T)),X,Y) :- &pyListToSet[X](Y),state(X,list(T)),ty(T).
unary_bg(my_lowercase8,u(char),X):-&pyLowercase[X](),state(X,char).
binary_bg(my_flatten9,(list(list(T)),list(T)),X,Y) :- &pyFlatten[X](Y),state(X,list(list(T))),ty(T).
binary_bg(my_min_list10,(list(int),int),X,Y) :- &pyMinlist[X](Y),state(X,list(int)).
binary_bg(my_pred11,(int,int),X,Y) :- &pyPred[X](Y),state(X,int),X > 0.
binary_bg(my_msort12,(list(int),list(int)),X,Y) :- &pySort[X](Y),state(X,list(int)).
